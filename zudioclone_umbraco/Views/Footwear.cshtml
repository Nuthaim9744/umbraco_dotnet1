@using zudioclone.models.Models.PageModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Footwear>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";


 







}




    <div id="carouselExampleAutoplaying"  class="carousel slide" data-bs-ride="carousel">


    <div class="carousel-inner">
         
        @foreach (var block in Model.Bannerimage)
        {
            var content = block.Content as FootWearBannerImage;
              
        <div class="carousel-item active">
                <img src="@content.Bannerimage?.GetCropUrl()" class="d-block w-100" alt="...">
        </div>
            
        }
    </div>

       
        
      
      
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
</div>






<div class="custom-container">
    <div class="row">
        @foreach (var block in Model.Products)
        {
            var content = block.Content as Product;
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card" style="width: 18rem;">
                    <img src="@content.Image?.GetCropUrl()" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@content.Title</h5>
                        <p class="card-text">@content.Price</p>
                        <p class="card-text">@content.Description</p>
                  @*       <a href="#" class="btn btn-primary">Buy Now</a> *@
                    </div>
                </div>
            </div>
        }
    </div>
</div>



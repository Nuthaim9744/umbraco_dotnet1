@using zudioclone.models.Models.PageModels;
@using Umbraco.Extensions;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Home>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
    var model=Model;

    var  blogItem = Model.Descendants<BlogPost>()
                         .OrderByDescending(x => x.CreateDate)
                         .Take(3);


    var buetyItem = Model.Descendants<Buety>().FirstOrDefault();
    var WomenItem = Model.Descendants<Women>().FirstOrDefault();
    var menItem = Model.Descendants<Men>().FirstOrDefault();
    var ethnicItem = Model.Descendants<Ethnic>().FirstOrDefault();
    var KidsItem = Model.Descendants<Kids>().FirstOrDefault();
    var LoungeItem = Model.Descendants<Lounge>().FirstOrDefault();
    var FootwearItem = Model.Descendants<Footwear>().FirstOrDefault();


}

 <div id="carouselExampleAutoplaying"  class="carousel slide" data-bs-ride="carousel">

    <div class="carousel-inner">

    @foreach (var block in Model.Bannerimagehome)
    {
        var content = block.Content as HomeBannerImage;

      
            <div class="carousel-item active">
                <img src="@content.Bannerimage?.GetCropUrl()" class="d-block w-100" alt="...">
            </div>
    }

    </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
<h1 class="text-center" >@Model.Value("campaignTitle")</h1>
<div class="d-flex">
<div>

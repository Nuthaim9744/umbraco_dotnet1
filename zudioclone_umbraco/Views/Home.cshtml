        {
            var content = block.Content as Homerightcontent;
            <h5 class="mt-5">@content.Contens</h5>
           
            

        }

  

  

</div>
</div>



<div>
    <h1 class="text-center mt-5" >@Model.Value("blogheading")</h1>

    <div class="blogohome">
    
    

@foreach(var content in blogItem)

{

   <div>
<a href="@content.Url()"><img src="@content.Blogimage?.GetCropUrl()" alt="Alternate Text" /></a>
		<h1>@content.BlogTitle</h1>
	</div>

     
	}
    </div>


    </div>

<div class="card-img-overlay">
    <ul type="none">
        <li class="ps-5"><a href="@buetyItem.Url()">@Model.Value("beauty")</a></li>
        <li class="ps-5"><a href="@WomenItem.Url()">@Model.Value("women")</a></li>
        <li class="ps-5"><a href="@menItem.Url()">@Model.Value("men")</a></li>
        <li class="ps-5"><a href="@ethnicItem.Url()">@Model.Value("ethnic")</a></li>
        <li class="ps-5"><a href="@KidsItem.Url()">@Model.Value("kids")</a></li>
        <li class="=ps-5 ps-5"><a href="@LoungeItem.Url()">@Model.Value("loungewear")</a></li>
        <li class="ps-5 ps-3"><a href="@FootwearItem.Url()">@Model.Value("footwear")</a></li>
    </ul>
</div>


















   






  